doctype html
html
	head
		title Miaou - Pad
		link(id="favicon",rel="icon",type="image/png",href="static/M-32.png")
		link(rel='stylesheet', href='static/themes/'+theme+'/miaou.css?v=2')
		script(src="socket.io/socket.io.js")
		script(src="static/jquery-2.1.3.min.js")
		script#locals(type="Application/JSON") !{JSON.stringify(vars)}
		script(src="static/miaou.min.js?v=2")
		script(src="static/pad.min.js")
	body.pad
		#non-top
			#left
				#users
			#center
				#vert-center
					#message-scroller
						div#messages
					#notifications
					#input-panel
						textarea#input(lang=vars.room.lang)
						button.small#send Send
						button.small#showPreview Preview
						button.small#cancelEdit(style="display:none") Cancel
						button.small#uploadOpen Upload
					#upload-panel
						#upload-controls
							| Select an image to send to imgur
							br
							br
							input(type="file",id="file")
							button#uploadSend Send
							button#cancelUpload Cancel
						#upload-wait(style="display:none")
							p Uploading image to imgur...
							img(src="static/ajax-loader-bar.gif")
					#preview-panel
						#preview.rendered
						button.small#shortcuts Shortcuts
						button.small#hidePreview Hide
				#hist
			#right
				#room-description.rendered
				.tabs
					span.tab.selected(page="notablemessagespage") Notable Messages
					span.tab(page="search") Search
				.page.selected#notablemessagespage
					#notable-messages
				.page#search
					input#searchInput(autocomplete="off")
					#search-results
						i
							p Type anything to search it (common English words are ignored)
							p Hit <code>esc</code> to clear
		#stripe
			#stripe-top
				#M-menu
					a#Miaou-logo-wrapper(href="rooms")
						object.Miaou-logo#Miaou-logo(type="image/svg+xml",data="static/Miaou.svg")
					#menu-content
						p You're connected as <span id=me></span>
						a.menu-item#menu-logout Log Out
						a.menu-item#menu-settings Settings
						a.menu-item#menu-help(href="help") Help
				#room-panel-wrapper
					#room-panel-bg
					#room-panel
						#room-title
							a#roomname(href=vars.room.path)
						#room-buttons
							button.small#editroom edit
							button.small#watch watch
							button.small#auths authorizations
				#watches
			#rooms-panel.closed
				#rooms
					#rooms-spinner
						img(src="static/ajax-loader-brown.gif")
					#rooms-content
						#rooms-tabs
							span.tab Your Main Rooms
							span.tab Public Rooms
							span.tab Private Rooms
							span.tab Dialog Rooms
							span.tab.aftertabs
								button.small#create-room Create A Room
						#rooms-page
	
